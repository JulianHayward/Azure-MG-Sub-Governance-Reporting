{
  "displayName": "Azure Defender for SQL should be enabled for unprotected SQL Managed Instances",
  "policyType": "BuiltIn",
  "mode": "Indexed",
  "description": "Audit each SQL Managed Instance without advanced data security.",
  "metadata": {
    "version": "1.0.2",
    "category": "SQL"
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "AuditIfNotExists",
        "Disabled"
      ],
      "defaultValue": "AuditIfNotExists"
    }
  },
  "policyRule": {
    "if": {
      "field": "type",
      "equals": "Microsoft.Sql/managedInstances"
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": {
        "type": "Microsoft.Sql/managedInstances/securityAlertPolicies",
        "name": "Default",
        "existenceCondition": {
          "field": "Microsoft.Sql/managedInstances/securityAlertPolicies/state",
          "equals": "Enabled"
        }
      }
    }
  }
}

