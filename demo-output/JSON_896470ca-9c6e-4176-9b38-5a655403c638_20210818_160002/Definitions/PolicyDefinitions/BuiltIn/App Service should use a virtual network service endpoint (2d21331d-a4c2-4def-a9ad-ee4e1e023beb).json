{
  "displayName": "App Service should use a virtual network service endpoint",
  "policyType": "BuiltIn",
  "mode": "Indexed",
  "description": "This policy audits any App Service not configured to use a virtual network service endpoint.",
  "metadata": {
    "version": "1.0.0",
    "category": "Network"
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "AuditIfNotExists",
        "Disabled"
      ],
      "defaultValue": "AuditIfNotExists"
    }
  },
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Web/sites"
        },
        {
          "field": "kind",
          "like": "app*"
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]",
      "details": {
        "type": "Microsoft.Web/sites/virtualNetworkConnections",
        "existenceCondition": {
          "field": "Microsoft.Web/sites/virtualnetworkconnections/vnetResourceId",
          "exists": "true"
        }
      }
    }
  }
}

